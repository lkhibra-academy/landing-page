<div class="relative max-w-6xl mx-auto px-5 sm:px-6 py-12">
  <div class="grid gap-6 sm:grid-cols-3 grid-cols-1">
    {% for item in accomplishment %}
        <div class="relative p-2 border border-red-primary rounded-xl shadow-xl text-center justify-self-center sm:w-full lg:w-72 min-w-72 w-full mx-8">
            <h5 class="text-5xl font-bold">{{item.num}}</h5>
            <p class="mt-1 mb-3 text-lg font-medium text-gray-500">{{item.desc | i18n}}</p>
        </div>
    {% endfor %}
  </div>
</div>
