{% from "partials/logo.njk" import Logo %}
{% from "partials/dropdown.njk" import Dropdown with context %}
<nav class="bg-white shadow-lkhibra w-full" dir="ltr" x-data="{
    navbar: false,
}">
  <div class="relative max-w-6xl mx-auto px-5 sm:px-6">
    <div class="justify-center md:items-center md:flex">
      <div class="bg-white">
        <div class="flex items-center justify-between py-3 md:py-5 md:block">
          <a href="{{ "/" | locale_url }}" class="block" aria-label="lkhibra">
            {{ Logo("w-20 md:w-28") }}
          </a>
          <div class="md:hidden bg-white">
            <button class="p-2 text-gray-700 rounded-md outline-none focus:border-gray-400 focus:border"
              @click="navbar = !navbar">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 20 20" fill="currentColor" x-cloak
                x-show="navbar">
                <path fillRule="evenodd"
                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                  clipRule="evenodd" />
              </svg>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24"
                stroke="currentColor" stroke-width="2" x-show="!navbar">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
      </div>
      <div>
        <div class="flex-1 justify-self-center pb-3 mt-8 md:block md:pb-0 md:mt-0"
          x-cloak="mobile"
          x-bind:class="navbar ? 'block' : 'hidden'">
          <ul
            class="items-center justify-center space-y-8 md:flex md:space-x-6 md:space-y-0 text-lg font-medium bg-white">
            {% for item in navigation %}
              {% if item.items %}
                {{ Dropdown(item.name, item.items) }}
              {% else %}
                <li class="ml-3">
                  <a href="{{ item.url | locale_url }}">{{ item.name | i18n }}</a>
                </li>
              {% endif %}
            {% endfor %}
            <div>
              {% include "partials/lang.njk" %}
            </div>
          </ul>
        </div>
      </div>
    </div>
  </div>
</nav>