                        <p class="text-sm font-medium mb-3 text-white bg-neutral-400 p-1 px-3 rounded-md w-fit">
                            {{ offers[0].subscription }}           
                        </p>
                    </p>
                    {# <p class="text-lg font-medium text-neutral-600 pb-3 border-b">
                        {{ "offers[0].description" | i18n }}           
                    </p> #}
                    <ul dir="rtl" class="text-gray-700 text-base md:text-lg list-inside pt-3">
                        {# <p class="text-base font-medium text-neutral-600 pb-2 ">
                            {{ "offers[0].fTitle" | i18n }}           
                        </p> #}
                        {% for item in offers[0].features %}          
                        <li class="flex items-start flex-row mb-1">
                            {% if item.icon in icons.brands %}
                                <i class="fa-brands fa-{{ item.icon }} w-8 p-1 lg:ml-1 text-center"></i>
                            {% else %}
                                <i class="fa-solid fa-{{ item.icon }} w-8 p-1 lg:ml-1 text-center"></i>
                            {% endif %}
                                <p class="">
                                    {{ item.name | i18n }}
                                </p>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="mt-4 rounded-lg">
                    <a aria-controls="modal"
                        class="flex justify-around items-center rounded-md text-lg mt-2 font-normal p-2
                        bg-red-primary text-white w-full text-center cursor-pointer"
                        x-cta="{offer:offers[2].value, training: {{ training|json }}}">
                        تسجيل
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>
</template>
