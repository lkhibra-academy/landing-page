<section id="offers" class="relative max-w-6xl mx-auto px-0 sm:px-6 mb-4 mt-2 " x-data="$offers">
    <div class="relative items-center w-fit mx-auto px-3 md:px-1  ">
        <div class="relative md:p-2 overflow-hidden grid grid-cols-1 md:grid-cols-3 rounded-xl md:space-y-0 space-y-6 gap-x-1 md:gap-x-4 items-center justify-center">

            <div dir="rtl" class="relative flex flex-col p-5 bg-white rounded-2xl h-fit  order-2 md:order-1 border">
                <div class="flex-1">
                    <h3 class="font-semibold text-lg text-neutral-600 ">
                        {{ "offers[0].title" | i18n }}
                    </h3>
                    <p class="flex items-baseline text-neutral-600 leading-none pt-3 space-y-0">
                        <span class="text-6xl font-bold leading-none" x-text="offers[1].value">
                        </span>
                        <span class="text-2xl font-semibold leading-none text-neutral-500 pr-1">
                            {{ "offers[0].currency" | i18n }}
                        </span>
                        <p class="text-base font-light text-neutral-500 pb-3 ">
                                {{ "offers[0].subscription" | i18n }}           
                        </p>
                    </p>
                    {# <p class="text-lg font-medium text-neutral-600 pb-3 border-b">
                        {{ "offers[0].description" | i18n }}           
                    </p> #}
                    <ul dir="rtl" class="text-gray-700 text-base md:text-lg list-inside pt-3 border-1">
                        {# <p class="text-base font-medium text-neutral-600 pb-2 ">
                            {{ "offers[0].fTitle" | i18n }}           
                        </p> #}
                        {% for item in translation[page.lang].offers[0].features %}          
                        <li class="flex items-start flex-row mb-1">
                            
                            {% if item.icon | i18n == "users-rectangle" %}
                                <i class="fa-solid fa-users-rectangle w-8 p-1 lg:ml-1 text-center"></i>
                            {% elif item.icon | i18n == "python" %}
                                <i class="fa-brands fa-python w-8 p-1 lg:ml-1 text-center"></i>
                            {% elif item.icon | i18n == "users" %}
                            <i class="fa-solid fa-users w-8 p-1 lg:ml-1 text-center"></i>
                            {% elif item.icon | i18n == "whatsapp" %}
                                <i class="fa-brands fa-whatsapp w-8 p-1 lg:ml-1 text-center"></i>
                            {% elif item.icon | i18n == "code" %}
                                <i class="fa-solid fa-code w-8 p-1 lg:ml-1 text-center"></i>    
                            {% endif %}
                                <p class="">
                                    {{ item.name | i18n }}
                                </p>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="mt-4 rounded-lg">
                    <a aria-controls="modal"
                        class="flex justify-around items-center rounded-md text-lg mt-2 font-normal p-2
                        bg-red-primary text-white w-full text-center cursor-pointer"
                        x-cta="offers[1].value">
                        تسجيل
                    </a>
                </div>
            </div> 


