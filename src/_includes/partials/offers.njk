                            {{ "offers[0].fTitle" | i18n }}           
                        </p> #}
                        {% for item in offers[1].features %}          
                        <li class="flex items-start flex-row mb-1">
                            {% if item.icon in icons.brands %}
                                <i class="fa-brands fa-{{ item.icon }} w-8 p-1 lg:ml-1 text-center"></i>
                            {% else %}
                                <i class="fa-solid fa-{{ item.icon }} w-8 p-1 lg:ml-1 text-center"></i>
                            {% endif %}
                                <p class="">
                                    {{ item.name }}
                                </p>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="mt-4 rounded-lg">
                    <a aria-controls="modal"
                        class="flex justify-around items-center rounded-md text-lg mt-2 font-normal p-2
                        bg-red-primary text-white w-full text-center cursor-pointer"
                        x-cta="{offer:offers[1].value, training: {{ training|json }}}">
                        تسجيل
                    </a>
                </div>
            </div> 



            <div class="relative flex flex-col p-5 
            rounded-2xl h-fit order-3 border md:order-1">
                <div class="flex-1">
                    <h3 class="font-semibold text-lg text-neutral-600 ">
                        {{ offers[0].title }}
                    </h3>
                    <p class="flex items-baseline text-neutral-600 leading-none pt-3 space-y-0">
                        <span class="text-6xl font-bold leading-none" x-text="offers[2].value">
                        </span>
                        <span class="text-2xl font-semibold leading-none text-neutral-500 pr-1">
                            {{ offers[0].currency }}
