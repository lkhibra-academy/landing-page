            <div class="relative rounded-t-2xl h-fit md:order-3">
                <div class="flex items-center flex-col pt-1 border-2 border-red-primary 
                rounded-t-2xl px-4 text-white bg-red-primary w-fit mx-auto">
                        <p class="text-lg font-medium text-center ">
                            {{ offers[2].fTitle }} 
                        </p>         
                </div>
                        <div class=" flex flex-col bg-red-primary rounded-2xl ">
                            <div class="relative bg-red-primary flex-1 m-5">
                                <h3 class="font-semibold text-lg text-white">
                                    {{ offers[2].title }}
                                </h3>
                                <p class="flex items-baseline text-white space-x-2 leading-tight">
                                    <span class="text-6xl font-bold" x-text="offers[0].value">
                                    </span>
                                    <span class="text-2xl font-semibold leading-none  pr-1">
                                        {{ offers[2].currency }}
                                    </span>
                                    <p class="text-sm font-medium mb-3 text-red-primary bg-white p-1 px-3 rounded-md w-fit">
                                            {{ offers[2].subscription }}           
                                    </p>                    
                                </p>
                                {# <p class="text-lg font-medium text-white pb-3 ">
                                    {{ "offers[2].description" | i18n }}           
                                </p> #}
                                <ul class="text-white text-base md:text-lg list-inside pt-3">
                                    {% for item in offers[2].features %}          
                                        <li class="flex items-start flex-row mb-1">
                                            {% if item.icon in icons.brands %}
                                                <i class="fa-brands fa-{{ item.icon }} w-8 p-1 lg:ml-1 text-center"></i>
                                            {% else %}
                                                <i class="fa-solid fa-{{ item.icon }} w-8 p-1 lg:ml-1 text-center"></i>
                                            {% endif %}
                                            <p class="">
                                                {{ item.name | i18n }}
                                            </p>
                                        </li>
                                    {% endfor %}
                                </ul>
            
                            </div>
                            <div class=" rounded-lg m-5">
                                <a aria-controls="modal"
                                    class="flex justify-around items-center rounded-md text-lg font-medium p-2
                                    text-red-primary bg-white w-full text-center cursor-pointer"
                                    type="submit"
                                    x-cta="{offer:offers[0].value, training: {{ training|json }}}"
                                    >
                                    تسجيل
                                </a>
                            </div>
