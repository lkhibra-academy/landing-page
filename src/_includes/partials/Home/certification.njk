<section class="relative max-w-6xl mx-auto px-5 sm:px-6">
    {# hero section #}
    <div class="grid grid-cols-1 gap-1 lg:gap-16 md:grid-cols-2 pt-4 md:pb-2 pb-0 md:pt-8 ">
      {# picture #}
      <div
        class="relative h-60 md:h-80 overflow-hidden rounded-lg my-auto md:max-h-full ">
        {% image "src/assets/images/verifypic.png", "certificate", ["webp","png"], [300,600], "(min-width: 780px) 360px, 259px", {class:"absolute inset-0 h-full mx-auto w-fit object-contain"}%}
