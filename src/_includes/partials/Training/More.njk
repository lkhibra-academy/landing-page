{% macro More(MoreTraining) %}
<div class="relative max-w-6xl mx-auto py-4 px-5 sm:px-12 mb-4">
    <p class='text-center text-2xl md:text-3xl font-bold mb-2'>
    {{ [MoreTraining, "title"] | join(".") | i18n }}
    {# {{ context[MoreTraining].title | i18qn }} #}
    </p>
    <div class="grid grid-cols-1 gap-4 mt-6 md:gap-12 md:mt-12 md:grid-cols-2 lg:grid-cols-4">
        {% for i in range(0, 4) %}
        {# {% for item in context[MoreTraining].content %} #}
        <div class="flex flex-row-reverse items-start text-right ltr:text-left ml-auto">
          <div class="mx-4">
            <p class="text-lg font-semibold leading-tight">
              {{ [MoreTraining, "title"] | join(".content["+i+"].") | i18n }}
            </p>
            <p class="mt-1 text-base font-normal">
                {{ [MoreTraining, "p"] | join(".content["+i+"].") | i18n }}
            </p>
          </div>
          <div class='flex-shrink-0 bg-white rounded-lg outline outline-1 outline-red-primary p-3 w-10 h-10 flex justify-center items-center'>
            {% if [MoreTraining, "content", i, "icon"] | join(".") | i18n == "users" %}
                <i class="fa fa-users text-red-primary text-center" aria-hidden="true"></i>
            {% elif [MoreTraining, "content", i, "icon"] | join(".") | i18n == "graduate" %}
                <i class="fa fa-user-graduate text-red-primary text-center" aria-hidden="true"></i>
            {% elif [MoreTraining, "content", i, "icon"] | join(".") | i18n == "graduation-cap" %}
                <i class="fa fa-graduation-cap text-red-primary text-center" aria-hidden="true"></i>
            {% elif [MoreTraining, "content", i, "icon"] | join(".") | i18n == "laptop-code" %}
                <i class="fa fa-laptop-code text-red-primary text-center" aria-hidden="true"></i>
                {% elif [MoreTraining, "content", i, "icon"] | join(".") | i18n == "brush" %}
                <i class="fa fa-palette text-red-primary text-center" aria-hidden="true"></i>
                {% endif %}  
                   
            </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endmacro %}