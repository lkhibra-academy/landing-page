<section class="relative max-w-6xl mx-auto px-5 sm:px-6">
  <div
    class="grid grid-cols-1 gap-1 lg:gap-16 md:grid-cols-2 pt-4 md:pb-2 pb-0 md:pt-8"
  >
    <div
      class="relative h-80 overflow-hidden rounded-lg my-auto max-h-56 md:max-h-full"
    >
      {% image "src/assets/images/heropic1.png", "woman smilling", ["webp","png"], [300,600], "(min-width: 780px) 360px, 259px", {class:"absolute inset-0 h-full mx-auto w-fit object-contain"}%}
    </div>

    <div
      class="md:order-last flex flex-col justify-center items-center flex-shrink-0"
      dir="rtl"
    >
      <div class="text-center lg:text-right  self-start p-4">
        <h2 class="text-3xl font-bold sm:text-4xl">{{ "Hero.title" | i18n }}</h2>

        <p class="mt-4 text-gray-600 text-lg">{{ "Hero.subtitle" | i18n}}</p>
        <div class=" mx-auto max-w-none  flex justify-around items-center flex-row  pt-4  " x-data ><a href="#offers"
            class="btn text-white bg-red-primary w-full px-0  md:my-6  mb-0" x-cta >{{ "Hero.cta1" | i18n}}</a><a href="#content"
            class="btn text-white bg-gray-900 w-full px-0 md:my-6 mb-0 mr-4">{{ "Hero.cta2" | i18n}}</a></div>
      </div>
    </div>
  </div>
  <div class="p-4 w-full">
    <p
      class="text-2xl font-bold leading-tight md:text-3xl text-center mb-6 md:mt-1 text-black-primary"
    >
      {{ "Hero.theytrustus" | i18n}}
    </p>
    <div class="max-w-sm md:max-w-4xl mx-auto grid gap-2 grid-cols-4">
      <div class="flex items-center justify-center py-2 md:col-auto">
        {% image "src/assets/images/logo/fsr1.png", "fsr", ["webp","png"], [150], "(min-width: 780px) 150px, (min-width: 480px) 90px, calc(24.38vw - 22px)", {class:"object-cover"}%}
      </div>
      <div class="flex items-center justify-center py-2 md:col-auto">
        {% image "src/assets/images/logo/lions1.png", "lions", ["webp","png"], [150], "(min-width: 780px) 150px, (min-width: 480px) 90px, calc(24.38vw - 22px)", {class:"object-cover"}%}
      </div>
      <div class="flex items-center justify-center py-2 md:col-auto">
        {% image "src/assets/images/logo/souissi1.png", "souissi", ["webp","png"], [150], "(min-width: 780px) 150px, (min-width: 480px) 90px, calc(24.38vw - 22px)", {class:"object-cover"}%}
      </div>
      <div class="flex items-center justify-center py-2 md:col-auto">
        {% image "src/assets/images/logo/iscae1.png", "iscae", ["webp","png"], [150], "(min-width: 780px) 150px, (min-width: 480px) 90px, calc(24.38vw - 22px)", {class:"object-cover"}%}
      </div>
    </div>
  </div>
</section>
