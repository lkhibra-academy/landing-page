<script>
  // Countdown timer to a specific future date and time
  const countDownDate = new Date("Jul 12, 2024 00:00:00").getTime();
  const countdownElement = document.getElementById("countdown");

  const x = setInterval(function() {
    const now = new Date().getTime();
    const distance = countDownDate - now;

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    countdownElement.innerHTML = days + "d " + hours + "h " + minutes + "m " + seconds + "s ";

    if (distance < 0) {
      clearInterval(x);
      countdownElement.innerHTML = "التسجيل مفتوح الآن!";
      document.getElementById("countdown-modal").classList.add("hidden");
      document.getElementById("blur-overlay").classList.add("hidden");
    }
  }, 1000);
</script>
